@{
    ViewBag.Title = "Upload a file and create a shared access signature";
}
<h2>@ViewBag.Title</h2>

<div>
    <p class="text-info">Select a file to upload to Azure Blob Storage and an expiry date for the Shared Access Signature that will be generated.</p>
</div>
<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="blob">Input File</label>
        <div class="col-md-10">
            <input type="file" name="inputFile" class="form-control" />
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" for="expiryDate">Expiry Date</label>
            <div class="col-md-10">
                <input type="date" name="expiryDate" class="form-control" value="@ViewBag.ExpiryDate.ToString("yyyy-MM-dd")" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<div>
    @if (TempData["SharedAccessUri"] != null)
    {
        <span class="text-success">
            Upload succeeded. Click on the button to access the file.
            <a class="btn btn-sm btn-success" href="@TempData["SharedAccessUri"]">Show</a>
        </span>

    }
</div>

